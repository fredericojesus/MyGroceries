<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_10dp" >
 
    <TextView
        android:id="@+id/itemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/padding_15dp"
        android:textStyle="bold"/>
    
   	<ImageView
        android:id="@+id/item_delete"
        android:layout_width="@dimen/row_icon_width"
        android:layout_height="@dimen/row_icon_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:paddingRight="@dimen/padding_5dp"
        android:src="@drawable/ic_delete"
        android:contentDescription="@string/app_name"/>
   	
   	<ImageView
        android:id="@+id/item_edit"
        android:layout_width="@dimen/row_icon_width"
        android:layout_height="@dimen/row_icon_height"
        android:layout_toLeftOf="@+id/item_delete"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:layout_marginRight="@dimen/padding_5dp"
        android:src="@drawable/ic_edit"
        android:contentDescription="@string/app_name"/>
   	
    <ImageView
        android:id="@+id/item_add"
        android:layout_width="@dimen/row_icon_width"
        android:layout_height="@dimen/row_icon_height"
        android:layout_toLeftOf="@+id/item_edit"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:layout_marginRight="@dimen/padding_5dp"
        android:src="@drawable/ic_add_grey"
        android:contentDescription="@string/app_name"/>
    
    <TextView
        android:id="@+id/quantityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/itemText"
        android:layout_marginLeft="@dimen/padding_15dp"
        android:textSize="12sp"/>

</RelativeLayout>
